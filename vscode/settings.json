{
    "workbench.activityBar.visible": true,

    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.leader": ",",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<leader>", "f"],
            "commands": ["workbench.action.gotoSymbol"]
        },
        {
            "before": ["<leader>", "w", "v"],
            "commands": ["workbench.action.splitEditorRight"]
        },
        {
            "before": ["<leader>", "w", "s"],
            "commands": ["workbench.action.splitEditorDown"]
        },
        {
            "before": ["<leader>", "w", "-"],
            "commands": ["workbench.action.splitEditorDown"]
        },
        {
            "before": ["<leader>", "w", "|"],
            "commands": ["workbench.action.splitEditorRight"]
        },
        {
            "before": ["<leader>", "w", "j"],
            "commands": ["workbench.action.joinAllGroups"]
        },
        {
            "before": ["<leader>", "g", "t"],
            "commands": ["editor.action.goToDeclaration"]
        },
        {
            "before": ["<leader>", "g", "r"],
            "commands": ["editor.action.referenceSearch.trigger"]
        },
        {
            "before": ["<leader>", "t", "l"],
            "commands": ["workbench.action.nextEditor"]
        },
        {
            "before": ["<leader>", "t", "h"],
            "commands": ["workbench.action.previousEditor"]
        },
        {
            "before": ["<leader>", "m"],
            "commands": ["workbench.action.toggleSidebarVisibility"]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after": ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [">"],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": ["<"],
            "commands": ["editor.action.outdentLines"]
        }
    ],
    "editor.wordWrap": "off",
    "editor.rulers": [120],
    "editor.codeLens": false,
    "editor.tabCompletion": "on",

    "testExplorer.codeLens": true,
    "testExplorer.showOnRun": true,

    "cmake.configureOnOpen": true,
    "cmake.buildDirectory" : "${workspaceFolder}/build/${buildType}",

    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.authors.enabled": false,
    "gitlens.currentLine.enabled": false,
    "gitlens.statusBar.enabled": false,

    "[cpp]": {
        "editor.defaultFormatter": "xaver.clang-format"
    },
    "zenMode.centerLayout": false,

    "latex-workshop.view.pdf.viewer": "tab",
    "extensions.ignoreRecommendations": true,
    "git.autofetch": true,

    "workbench.iconTheme": "Monokai Pro Icons",
    "clangd.checkUpdates": true,
    "testMate.cpp.log.userId": "9bcfb1130f437ee66a79fcb268db85d063f42010",
    "clangd.path": "/home/andre/.config/Code/User/globalStorage/llvm-vs-code-extensions.vscode-clangd/install/13.0.0/clangd_13.0.0/bin/clangd",
    "clangd.onConfigChanged": "restart",
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "testMate.cpp.log.logSentry": "disable_3",
    "editor.minimap.enabled": false,
    "workbench.colorTheme": "Monokai Pro",
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "terminal.integrated.shell.osx": "/bin/zsh",
    "[typescriptreact]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "typescript.updateImportsOnFileMove.enabled": "never",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "redhat.telemetry.enabled": false,
    "workbench.editor.showTabs": false,
    "editor.tabSize": 4,
    "editor.cursorStyle": "line",
    "editor.insertSpaces": true,
    "editor.lineNumbers": "on",
    "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
    "explorer.confirmDelete": false,
    "security.workspace.trust.untrustedFiles": "open",
    "window.zoomLevel": 2
}
