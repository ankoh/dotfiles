" Use Nerdfont for GUI
" Clone https://github.com/ryanoasis/nerd-fonts
" ./install.sh RobotoMono
set guifont=RobotoMono\ Nerd\ Font\ 12

" Remove left and right scrollbars
set guioptions-=L
set guioptions-=R

" Remove toolbar
set guioptions-=T

" Default size
set lines=40
set columns=120

" GVim does not need redraw speedups
set ttyfast=0
set lazyredraw=0
